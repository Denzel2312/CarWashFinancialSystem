<Page x:Class="CarWashFinancialSystem.Views.Pages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Услуги"
      Background="#121212">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Управление услугами" 
                       Foreground="White" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Добавление, редактирование и удаление услуг автомойки" 
                       Foreground="#B3B3B3" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Form for Add/Edit -->
            <Border Grid.Column="0" Background="#1E1E1E" Padding="20" Margin="0,0,20,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Добавить услугу" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Service Form -->
                    <TextBlock Text="Название услуги:" Foreground="#B3B3B3" Margin="0,5,0,2"/>
                    <TextBox x:Name="ServiceNameTextBox" Height="30" Background="#2D2D2D" Foreground="White" BorderBrush="#404040"/>

                    <TextBlock Text="Цена (руб):" Foreground="#B3B3B3" Margin="0,10,0,2"/>
                    <TextBox x:Name="ServicePriceTextBox" Height="30" Background="#2D2D2D" Foreground="White" BorderBrush="#404040"/>

                    <TextBlock Text="Описание:" Foreground="#B3B3B3" Margin="0,10,0,2"/>
                    <TextBox x:Name="ServiceDescriptionTextBox" Height="60" Background="#2D2D2D" Foreground="White" BorderBrush="#404040" 
                             TextWrapping="Wrap" AcceptsReturn="True"/>

                    <TextBlock Text="Длительность (мин):" Foreground="#B3B3B3" Margin="0,10,0,2"/>
                    <TextBox x:Name="ServiceDurationTextBox" Height="30" Background="#2D2D2D" Foreground="White" BorderBrush="#404040" Text="30"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button x:Name="AddServiceButton" Content="➕ Добавить" 
                                Background="#7E57C2" Foreground="Black" Padding="15,8"
                                Click="AddServiceButton_Click"/>
                        <Button x:Name="UpdateServiceButton" Content="✏️ Обновить" 
                                Background="#FF9800" Foreground="Black" Padding="15,8" Margin="10,0,0,0"
                                Click="UpdateServiceButton_Click" IsEnabled="False"/>
                    </StackPanel>

                    <Button x:Name="ClearFormButton" Content="Очистить форму" 
                            Background="Transparent" Foreground="#B3B3B3" Padding="10,5" Margin="0,10,0,0"
                            Click="ClearFormButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Services List -->
            <Border Grid.Column="1" Background="#1E1E1E" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Список услуг" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListView x:Name="ServicesListView" 
                              Background="Transparent" Foreground="White" BorderThickness="0"
                              SelectionChanged="ServicesListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding Price, StringFormat={}{0} руб}"/>
                                <GridViewColumn Header="Длительность" Width="100" DisplayMemberBinding="{Binding DurationMinutes, StringFormat={}{0} мин}"/>
                                <GridViewColumn Header="Описание" Width="250" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Действия" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" Tag="{Binding Id}" Click="EditServiceButton_Click" 
                                                        Background="Transparent" BorderThickness="0" Foreground="#7E57C2"
                                                        ToolTip="Редактировать"/>
                                                <Button Content="❌" Tag="{Binding Id}" Click="DeleteServiceButton_Click" 
                                                        Background="Transparent" BorderThickness="0" Foreground="#FF5252" Margin="5,0,0,0"
                                                        ToolTip="Удалить"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>