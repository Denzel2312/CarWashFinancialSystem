<Page x:Class="CarWashFinancialSystem.Views.Pages.ExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расходы"
      Loaded="Page_Loaded">

    <Grid Margin="0,0,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Управление расходами" Style="{StaticResource ModernHeaderText}"/>
            <TextBlock Text="Учёт коммунальных платежей, зарплат и других затрат" Style="{StaticResource ModernBodyText}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Список расходов -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="История расходов" Style="{StaticResource ModernSubheaderText}" Margin="0,0,0,15"/>

                    <!-- Добавлен ScrollViewer для прокрутки -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="480">
                        <ListView x:Name="ExpensesListView" 
                                  Background="Transparent" 
                                  BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3A3A3A" CornerRadius="8" Margin="0,0,0,8" Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Category}" 
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="12" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding ExpenseDate, StringFormat='dd.MM.yyyy'}" 
                                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text=" • " Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding Amount}" Foreground="#F44336" FontSize="11" FontWeight="SemiBold"/>
                                                    <TextBlock Text=" ₽" Foreground="#F44336" FontSize="11" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="✏️" 
                                                        Background="{StaticResource PrimaryBrush}" 
                                                        Foreground="White"
                                                        BorderThickness="0" 
                                                        Padding="8"
                                                        Margin="0,0,5,0"
                                                        Click="EditExpense_Click"
                                                        Tag="{Binding Id}"/>
                                                <Button Content="🗑️" 
                                                        Background="#F44336" 
                                                        Foreground="White"
                                                        BorderThickness="0" 
                                                        Padding="8"
                                                        Click="DeleteExpense_Click"
                                                        Tag="{Binding Id}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Форма добавления/редактирования -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" >
                <StackPanel>
                    <TextBlock x:Name="FormTitleText" Text="Добавить расход" 
                               Style="{StaticResource ModernSubheaderText}" Margin="0,0,0,15"/>

                    <StackPanel>
                        <TextBlock Text="Категория" Style="{StaticResource ModernBodyText}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CategoryComboBox" 
                        ItemsSource="{Binding Categories}"
                        Background="#3A3A3A"
                        Foreground="#3A3A3A"
                        BorderBrush="#404040"
                        BorderThickness="1"
                        Padding="10"
                        FontSize="13"/>
                        <TextBlock Text="Описание" Style="{StaticResource ModernBodyText}" Margin="0,15,0,5"/>
                        <TextBox x:Name="DescriptionTextBox" 
                                 Background="#3A3A3A" 
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="#404040" 
                                 BorderThickness="1"
                                 Padding="10"
                                 FontSize="13"/>

                        <TextBlock Text="Сумма (₽)" Style="{StaticResource ModernBodyText}" Margin="0,15,0,5"/>
                        <TextBox x:Name="AmountTextBox" 
                                 Background="#3A3A3A" 
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="#404040" 
                                 BorderThickness="1"
                                 Padding="10"
                                 FontSize="13"/>

                        <TextBlock Text="Дата" Style="{StaticResource ModernBodyText}" Margin="0,15,0,5"/>
                        <DatePicker x:Name="ExpenseDatePicker" SelectedDate="{Binding Mode=OneWay}"/>

                        <TextBlock Text="Примечания" Style="{StaticResource ModernBodyText}" Margin="0,15,0,5"/>
                        <TextBox x:Name="NotesTextBox" 
                                 Background="#3A3A3A" 
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="#404040" 
                                 BorderThickness="1"
                                 Padding="10"
                                 FontSize="13"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>

                        <Button x:Name="SaveButton" Content="💾 Сохранить расход" 
                                Style="{StaticResource ModernActionButtonStyle}"
                                Margin="0,20,0,0"
                                Click="SaveExpense_Click"/>

                        <Button x:Name="CancelButton" Content="❌ Отмена" 
                                Background="Transparent"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                BorderThickness="0"
                                Padding="15,10"
                                Margin="0,10,0,0"
                                Click="CancelEdit_Click"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>